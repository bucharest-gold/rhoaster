{
  "name": "rhoaster",
  "version": "0.2.0",
  "description": "A module to help with integration testing OpenShift Node.js applications",
  "main": "index.js",
  "author": "Red Hat, Inc.",
  "license": "Apache-2.0",
  "scripts": {
    "test": "npm run lint && tape test/*.js | tap-spec",
    "lint": "eslint test/*.js index.js",
    "prepare": "nsp check",
    "coverage": "nyc tape test/*.js",
    "coverage:html": "nyc npm test && nyc report --reporter=html",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "docs": "./node_modules/.bin/jsdoc --verbose -d docs -t ./node_modules/ink-docstrap/template -R README.md index.js",
    "ci": "npm run lint && npm run coveralls",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bucharest-gold/rhoaster.git"
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE.txt",
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/bucharest-gold/rhoaster/issues"
  },
  "homepage": "https://github.com/bucharest-gold/rhoaster",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-standard": "^3.0.1",
    "nsp": "^3.1.0",
    "nyc": "^11.4.1",
    "standard-version": "^4.3.0",
    "tap-spec": "^5.0.0",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "nodeshift": "^1.5.1",
    "openshift-config-loader": "~0.4.0",
    "openshift-rest-client": "^1.0.1"
  }
}
